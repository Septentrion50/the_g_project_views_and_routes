<% @gossip = Gossip.find(params[:id]) %>
<div class="container mt-5">
  <div class="container-fluid">
    <h1 class="mb-5">Editer le potin <%=@gossip.title%></h1>
    <h3 class="text-muted">Par <%=link_to "#{@gossip.user.first_name} #{@gossip.user.last_name}", { controller: 'user', action: 'show', id: @gossip.user.id }, class: 'text-decoration-none'%></h3>

    <% flash.each do |type, msg| %>
      <div class="alert alert-danger">
        <%= msg %>
      </div>
    <% end %>

    <%=form_for @gossip do |f|%>

      <div class="form-group">
        <label>Titre</label>
        <%=f.text_field :title, class: 'form-control'%>
      </div>

      <div class="form-group">
        <label>Contenu</label>
        <%=f.text_area :content, class: 'form-control'%>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Editer</button>
      </div>

    <%end%>
  </div>
</div>
