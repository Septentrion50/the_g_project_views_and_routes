<div class="container">
  <div class="container-fluid mt-5">

    <% flash.each do |type, msg| %>
      <div class="alert alert-danger">
        <%= msg %>
      </div>
    <% end %>

    <h1>Cr√©er un potin</h1>

      <%= form_tag url_for(action: 'create'), method: "post" do %>

      <div class="form-group">
      <%= label_tag 'Titre' %>
      <%= text_field_tag 'title','', require: true, class: "form-control"%>
      <br /> <br />
      </div>

      <div class="form-group">
      <%= label_tag 'Contenu' %>
      <%= text_area_tag 'content', '', require: true, class: "form-control"%>
      <br /> <br />
      </div>

      <%= submit_tag "Envoyer", class: "btn btn-primary"%>

    <% end %>

  </div>
</div>
